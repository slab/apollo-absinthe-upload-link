{
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true
    }
  },
  "compilerOptions": {
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": false,
    "module": "ES2020",
    "moduleResolution": "bundler",
    "noUnusedLocals": true
  },
  "include": ["src", "__mocks__", "__tests__"]
}
